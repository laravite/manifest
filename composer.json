{
    "name": "laravite/manifest",
    "description": "A tiny library for parsing and extracting information from Vite manifest files",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Nicolas Hedger",
            "email": "nicolas@hedger.ch"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.23",
        "phpstan/phpstan": "^1.3",
        "phpunit/phpunit": "^9.5"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Laravite\\Manifest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laravite\\Manifest\\Test\\Unit\\": "tests/Unit"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml.dist",
        "analyse": "phpstan analyse --configuration phpstan.neon.dist"
    }
}
